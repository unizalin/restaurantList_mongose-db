<div class="container mx-auto p-5 my-5">
  <h2 class="text-center font-italic">你正在編輯{{{restaurants.name}}}的資料/{{{this.id}}}/delete～</h2>
  <div class="p-3 mt-3">
    <form action="/restaurants/{{{restaurants._id}}}?_method=PUT" method="POST" class="font-weight-light">
      <!-- 餐廳中文名稱  -->
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">餐廳名稱 <small><i
              class="fas fa-star-of-life text-danger"></i></small></label>
        <div class="col-sm-10">
          <input type="name" name="name" class="form-control" id="name" required value="{{{restaurants.name}}}">
        </div>
      </div>

      <!-- 餐廳英文名稱  -->
      <div class="form-group row">
        <label for="name_en" class="col-sm-2 col-form-label">餐廳英文名稱</label>
        <div class="col-sm-10">
          <input type="name" name="name_en" class="form-control" id="name_en" value="{{{restaurants.name_en}}}">
        </div>
      </div>

      <!-- 餐廳編號  -->
      <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">餐廳編號</label>
        <div class="col-sm-6">
          <input type="number" name="id" class="form-control" id="id" min="1" step="1" value="{{{restaurants.id}}}">
        </div>
      </div>

      <!-- 餐廳分類  -->
      <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label">餐廳類別</label>
        <div class="col-sm-10">
          <input type="text" name="category" class="form-control" id="category" value="{{{restaurants.category}}}">
        </div>
      </div>

      <!-- 餐廳照片網址  -->
      <div class="form-group row">
        <label for="image" class="col-sm-2 col-form-label">餐廳照片網址</label>
        <div class="col-sm-10">
          <input type="text" name="image" class="form-control" id="image" value="{{{restaurants.image}}}">
        </div>
      </div>

      <!-- 餐廳地點  -->
      <div class="form-group row">
        <label for="location" class="col-sm-2 col-form-label">餐廳地點</label>
        <div class="col-sm-10">
          <input type="text" name="location" class="form-control" id="location" value="{{{restaurants.location}}}">
        </div>
      </div>

      <!-- 餐廳電話  -->
      <div class="form-group row">
        <label for="phone" class="col-sm-2 col-form-label">餐廳電話</label>
        <div class="col-sm-10">
          <input type="text" name="phone" class="form-control" id="phone" value="{{{restaurants.phone}}}">
        </div>
      </div>

      <!-- 餐廳Google Map  -->
      <div class="form-group row">
        <label for="google_map" class="col-sm-2 col-form-label">Google_Map</label>
        <div class="col-sm-10">
          <input type="text" name="google_map" class="form-control" id="google_map"
            value="{{{restaurants.google_map}}}">
        </div>
      </div>

      <!-- 餐廳評分  -->
      <div class="form-group row">
        <label for="rating" class="col-sm-2 col-form-label">餐廳評分</label>
        <div class="col-sm-6">
          <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1"
            value="{{{restaurants.rating}}}">
        </div>
      </div>

      <!-- 餐廳簡介  -->
      <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">餐廳簡介</label>
        <div class="col-sm-10">
          <textarea name="description" id="description" cols="50" rows="3"
            value="{{{restaurants.description}}}"></textarea>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">更新</button>
        </div>
      </div>
    </form>
  </div>
</div>